<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#515151"
        android:gravity="center_horizontal" >

        <TextView
          
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Location DaySummery Report"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <DatePicker
        android:id="@+id/datePicker1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:id="@+id/sp_Location"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/datePicker1"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="25dp" />

    <Button
        android:id="@+id/Btn_generate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/datePicker1"
        android:layout_alignTop="@+id/sp_Location"
        android:text="Generate" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/sp_Location"
        android:layout_marginTop="46dp"
        android:textColor="#000000"
        android:text="Total Amount"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/TV_totalAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignRight="@+id/Btn_generate"
        android:layout_marginRight="21dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        
        android:textStyle="bold" />

</RelativeLayout>
