<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/linearLayout_login_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView_real_one_login_screen"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
               android:layout_gravity="center"
                android:layout_height="@dimen/login_screen_image_height"
                android:src="@drawable/login_logo" />

            <RelativeLayout
                android:id="@+id/email_rel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip" >

                <ImageView
                    android:id="@+id/imageView_email_address"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dip"
                    android:src="@drawable/maelcionland" />

                <EditText
                    android:id="@+id/ET_userid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="#00000000"
                    android:gravity="center_horizontal"
                    android:hint="USER ID"
                    android:inputType="textEmailAddress"
                    android:textSize="@dimen/s1" />

                <requestFocus />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_below="@+id/imageView_email_address"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:layout_marginTop="10dip"
                    android:background="@android:color/darker_gray" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/password_rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dip" >

                <ImageView
                    android:id="@+id/imageView_password"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dip"
                    android:src="@drawable/passwordiconland" />

                <EditText
                    android:id="@+id/ET_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_right"
                    android:background="#00000000"
                    android:gravity="center_horizontal"
                    android:hint="PASSWORD"
                    android:inputType="textPassword"
                    android:textSize="@dimen/s1" >
                </EditText>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dip"
                    android:layout_below="@+id/imageView_password"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:layout_marginTop="10dip"
                    android:background="@android:color/darker_gray" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layout_bottom"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/password_rel"
                android:layout_marginTop="20dip"
                android:gravity="bottom"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/Btn_login"
                    android:layout_width="@dimen/w1"
                    android:layout_height="@dimen/h1"
                    android:layout_gravity="center"
                    android:background="@drawable/login_button"
                    android:focusable="true"
                    android:gravity="center"
                    android:paddingBottom="4dip"
                    android:paddingLeft="20dip"
                    android:paddingRight="20dip"
                    android:paddingTop="4dip"
                    android:textSize="18sp" />
                     <Button
                    android:id="@+id/Btn_Signup"
                    android:layout_width="@dimen/w1"
                    android:layout_height="@dimen/h1"
                    android:layout_gravity="center"
                    android:background="@drawable/signup_button"
                    android:focusable="true"
                    android:gravity="center"
                    android:paddingBottom="4dip"
                    android:paddingLeft="20dip"
                    android:paddingRight="20dip"
                    android:paddingTop="4dip"
                    android:textSize="18sp" />
            </LinearLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1.5dip"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="0.01dip"
                    android:layout_weight="0.00"
                    android:background="@android:color/darker_gray" />

            </RelativeLayout>
            <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            
            <TextView
                   android:layout_width="wrap_content"
                    android:layout_height="50dp"
                   
                    android:layout_marginTop="10dip"
                />
        </LinearLayout>
        </LinearLayout>
        
    </ScrollView>

</LinearLayout>